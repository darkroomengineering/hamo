---
import Layout from '../layouts/Layout.astro'
import pkg from '../../../package.json'
---

<Layout title={`${pkg.name} Playground`}>
  <div class="hero">
    <svg class="logo" width="269" height="140" viewBox="0 0 269 140" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M268.493 140H0V72.877H201.37V67.123H0V0H268.493V140Z" fill="currentColor"/>
    </svg>
    <h1>{pkg.name}</h1>
    <p class="tagline">{pkg.description}</p>

    <div class="links">
      <a href="/react" class="primary">React Playground</a>
      <a href="https://github.com/darkroomengineering/hamo" target="_blank" rel="noopener noreferrer">GitHub</a>
      <a href="https://www.npmjs.com/package/hamo" target="_blank" rel="noopener noreferrer">npm</a>
    </div>

    <div class="hooks-list">
      <h2>Available Hooks</h2>
      <ul>
        <li><code>useWindowSize</code> <span>Track window dimensions</span></li>
        <li><code>useWindowWidth</code> <span>Selective width subscription</span></li>
        <li><code>useWindowHeight</code> <span>Selective height subscription</span></li>
        <li><code>useWindowDpr</code> <span>Device pixel ratio</span></li>
        <li><code>useMediaQuery</code> <span>CSS media query state</span></li>
        <li><code>useResizeObserver</code> <span>Element size changes</span></li>
        <li><code>useIntersectionObserver</code> <span>Element visibility</span></li>
        <li><code>useRect</code> <span>Element position tracking</span></li>
        <li><code>useLazyState</code> <span>State without re-renders</span></li>
        <li><code>useDebouncedState</code> <span>Debounced state updates</span></li>
        <li><code>useDebouncedCallback</code> <span>Debounced callbacks</span></li>
        <li><code>useDebouncedEffect</code> <span>Debounced effects</span></li>
        <li><code>useObjectFit</code> <span>Contain/cover calculations</span></li>
      </ul>
    </div>
  </div>
</Layout>

<style>
  .hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    padding: 40px 24px;
    text-align: center;
  }

  .logo {
    width: 120px;
    height: auto;
    margin-bottom: 24px;
    color: var(--color-fg);
  }

  h1 {
    font-family: monospace;
    font-size: 32px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    margin: 0 0 8px;
  }

  .tagline {
    color: var(--color-muted);
    margin: 0 0 32px;
    font-size: 14px;
  }

  .links {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
    justify-content: center;
    margin-bottom: 48px;
  }

  .links a {
    font-family: monospace;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 12px 20px;
    border: 1px solid var(--color-border);
    border-radius: 6px;
    color: var(--color-fg);
    text-decoration: none;
    transition: all 0.15s ease;
  }

  .links a:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  .links a.primary {
    background: var(--color-fg);
    color: var(--color-bg);
    border-color: var(--color-fg);
  }

  .links a.primary:hover {
    background: var(--color-accent);
    border-color: var(--color-accent);
    color: white;
  }

  .hooks-list {
    max-width: 500px;
    width: 100%;
  }

  .hooks-list h2 {
    font-family: monospace;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-muted);
    margin: 0 0 16px;
  }

  .hooks-list ul {
    list-style: none;
    padding: 0;
    margin: 0;
    text-align: left;
  }

  .hooks-list li {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 16px;
    border: 1px solid var(--color-border);
    border-radius: 6px;
    margin-bottom: 4px;
    font-size: 13px;
  }

  .hooks-list code {
    font-family: monospace;
    color: var(--color-accent);
  }

  .hooks-list span {
    color: var(--color-muted);
    font-size: 11px;
  }
</style>
